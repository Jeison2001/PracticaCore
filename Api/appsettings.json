{
  "ConnectionStrings": {
    "Default": "Host=your-host;Port=5432;Database=your-db;Username=your-user;Password=your-password;Ssl Mode=Require;"
  },
  "Jwt": {
    "Key": "your_jwt_secret_key",
    "Issuer": "your-app-issuer",
    "Audience": "your-app-audience",
    "ExpireMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileStorage": {
    "Provider": "azure",
    "LocalPath": "Uploads",
    "GoogleCloud": {
      "BucketName": "your-gcs-bucket",
      "ProjectId": "your-gcs-project-id",
      "CredentialsPath": "/app/credentials.json"
    },
    "AzureBlob": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net",
      "ContainerName": "your-container",
      "BaseUrl": "https://your-account.blob.core.windows.net/your-container"
    }
  },
  "EmailNotification": {
    "Provider": "SMTP",
    "SmtpSettings": {
      "Host": "smtp.yourprovider.com",
      "Port": 587,
      "Username": "your-email@domain.com",
      "Password": "your-email-password",
      "EnableSsl": true,
      "DefaultFrom": "your-email@domain.com",
      "DefaultFromName": "Your App Name"
    }
  }
}